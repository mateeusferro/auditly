{
  "name": "auditly",
  "version": "1.0.0",
  "description": "A lightweight audit log service for recording and querying structured application events",
  "main": "src/app.ts",
  "repository": "git@github.com:mateeusferro/auditly.git",
  "author": "Mateus Ferro",
  "license": "MIT",
  "dependencies": {
    "@fastify/formbody": "^8.0.2",
    "fastify": "^5.4.0",
    "pg": "^8.16.2",
    "typescript-eslint": "^8.35.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.15.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.2.7",
    "eslint": "^9.29.0",
    "prettier": "^3.6.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "dev": "tsx --watch --env-file .env src/app.ts",
    "start": "node --env-file .env dist/app.js",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  }
}
